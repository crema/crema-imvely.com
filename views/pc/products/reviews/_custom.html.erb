<% title t('reviews.product_reviews') %>
<% content_for :content do %>
  <%= render 'products/reviews/product_info' %>
  <% if @product && (@brand.review_writable? || !@product_reviews.empty?) %>
    <% display_write_form = @brand.review_writable? && display_write_form?(@product) && allow_comment? %>
    <%= render 'products/reviews/form', display_write_form: display_write_form %>
    <%= render 'products/reviews/summary', klass: ('without_write_form' unless display_write_form) %>
    <%= render 'products/reviews/custom/reviews' %>
  <% end %>
<% end %>
